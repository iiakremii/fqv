{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <h1 class="text-white text-center">Ajouter assurance</h1>
                            {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nom, 'Name', {'label_attr': {'class': 'text-black'}}) }}
                                {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'text-black'}}) }}
                                {{ form_errors(form.type, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.montant, 'Montant', {'label_attr': {'class': 'text-black'}}) }}
                                {{ form_errors(form.montant, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.date_debut, 'Date d√©but') }}
                                {{ form_errors(form.date_debut, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.date_fin, 'Date fin') }}
                                {{ form_errors(form.date_fin, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.contrat, 'Contrat') }}
                                {{ form_errors(form.contrat, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.contrat, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
